<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shoaibahamed.findmyage.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etDOB"
        android:hint="Enter your year of birth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text=" :)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShowAge"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textColorHighlight="@color/colorAccent"
        android:background="@android:color/white"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etDOB"
        android:layout_alignStart="@+id/etDOB" />

    <Button
        android:text="My Age?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="74dp"
        android:onClick="buFindAge"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/black"
        android:layout_below="@+id/etDOB"
        android:layout_alignLeft="@+id/etDOB"
        android:layout_alignStart="@+id/etDOB"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />
</RelativeLayout>
